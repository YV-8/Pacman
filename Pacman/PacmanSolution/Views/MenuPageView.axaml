<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:PacmanSolution.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PacmanSolution.Views.MenuPageView"
             x:DataType="viewModels:MenuPageViewModel"
             Background="Black">
    <UserControl.Styles>
        <Style Selector="Button.PacmanRetro">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Yellow"/>
            <Setter Property="BorderThickness" Value="5"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="RenderTransform" Value="none"/>
            <Setter Property="Width" Value="350"/>
            <Setter Property="Height" Value="80"/>
            <!--<Setter/> -->
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="TextBlock.ButtonOpt">
            <Setter Property="Foreground" Value="Yellow"/>
            <Setter Property="FontFamily" Value="Roboto Mono"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Styles>
    
    <Panel>
            <Canvas Opacity="0.3">
                <Ellipse Fill="White" Width="4" Height="4" Canvas.Left="100" Canvas.Top="100"/>
                <Ellipse Fill="White" Width="4" Height="4" Canvas.Left="200" Canvas.Top="100"/>
            </Canvas>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="40">
            
                <Viewbox Height="100">
                    <TextBlock Text="PAC-MAN" 
                               Foreground="#FFFF00" 
                               FontWeight="Black"
                               LetterSpacing="5">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="10" Color="Yellow" Opacity="0.5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Viewbox>

                <StackPanel Spacing="20">
                
                    <Button Classes="PacmanRetro" Command="{Binding GoGame}">
                        <StackPanel  Spacing="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Classes="ButtonOpt" Text="ðŸ’ Play" Margin="10,0,0,10"/>
                        </StackPanel>
                    </Button>

                    <Button Classes="PacmanRetro" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                            Command="{Binding GoScoreBoard}" BorderBrush="Yellow">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="ðŸ’ Score Board" VerticalAlignment="Center" 
                                       Foreground="White" FontSize="28"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Classes="PacmanRetro" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                            Command="{Binding ExitGame}" BorderBrush="Yellow">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="ðŸ’ Exit" VerticalAlignment="Center" 
                                       Foreground="White" FontSize="28"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Classes="PacmanRetro" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                            Command="{Binding GoSettingsMenu}" BorderBrush="Yellow">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="ðŸ’ Setting's music" VerticalAlignment="Center" 
                                       Foreground="White" FontSize="28"/>
                        </StackPanel>
                    </Button>
                
                </StackPanel>
            
            </StackPanel>
        
            <!-- <Border Height="2" Background="#2222FF" VerticalAlignment="Bottom" Margin="0,0,0,20" BoxShadow="0 0 10 2 #2222FF"/> -->
        </Panel>
</UserControl>
